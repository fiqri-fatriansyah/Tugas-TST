{
  "openapi" : "3.0.0",
  "info" : {
    "title" : "Board Game API",
    "description" : "Prototype Board Game API Documentation for TST purpose.",
    "version" : "0.0.1"
  },
  "paths" : {
    "/boardgame/list" : {
      "get" : {
        "summary" : "Returns a list of all information about every board game.",
        "operationId" : "list.read",
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/Board_Game"
                  }
                }
              }
            }
          },
          "403" : {
            "description" : "403 Access forbidden"
          },
          "500" : {
            "description" : "500 Internal server error"
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "Board_Game" : {
        "required" : [ "id", "name" ],
        "type" : "array",
        "properties" : {
          "id" : {
            "type" : "integer",
            "format" : "xxxx",
            "example" : 1
          },
          "name" : {
            "type" : "string",
            "example" : "Talisman"
          },
          "publisher" : {
            "type" : "string",
            "example" : "Asmodus Inc."
          },
          "quantity" : {
            "type" : "integer",
            "example" : 1
          }
        }
      },
      "Cafe" : {
        "required" : [ "name" ],
        "type" : "array",
        "properties" : {
          "name" : {
            "type" : "string",
            "example" : "Monomyth"
          },
          "about" : {
            "type" : "string",
            "example" : "Monomyth is a board game cafe that has many collection of board games."
          },
          "contact" : {
            "type" : "array",
            "items" : {
              "type" : "string",
              "format" : "name - telephone number",
              "example" : "Andre - 62xxxxxxxxxxx"
            }
          }
        }
      }
    }
  }
}
